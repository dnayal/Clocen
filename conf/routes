# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           	controllers.Application.index()
POST	/triggers/:node_id				controllers.Application.callTriggerListener(node_id: String)
GET		/authenticate/:node_id			controllers.Application.redirectAuthenticationCall(node_id: String)
GET		/nodes/:node_id/callback/oauth	controllers.Application.receiveOauthCallback(node_id: String)

GET		/angular						controllers.Application.testAngularJS()

POST	/users/find/email				controllers.UserController.getUserByEmail()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

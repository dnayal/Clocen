# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           	controllers.Application.index()
GET		/process						controllers.Application.getCreateProcessPage()
POST	/triggers/:node_id				controllers.Application.callTriggerListener(node_id: String)


GET		/nodes/all						controllers.NodeController.getAllNodes()
GET		/nodes/reflection/:nodeId		controllers.NodeController.getNodeConfiguration(nodeId: String)

GET		/nodes/reflection/:nodeId/info/:service	controllers.NodeController.callInfoService(nodeId: String, service: String)

GET		/nodes/:node_id/oauth/authorize	controllers.OAuthController.authorizeCall(node_id: String)
GET		/nodes/:node_id/oauth/callback	controllers.OAuthController.tokenCallback(node_id: String)
GET		/nodes/:node_id/oauth/refresh	controllers.OAuthController.refreshToken(node_id: String)

POST	/users/login					controllers.UserController.login()
POST	/users/register					controllers.UserController.register()
GET		/users/home						controllers.UserController.home()
GET		/users/logout					controllers.UserController.logout()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               	controllers.Assets.at(path="/public", file)

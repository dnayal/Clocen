# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           	controllers.Application.index()
GET		/angular						controllers.Application.testAngularJS()
POST	/triggers/:node_id				controllers.Application.callTriggerListener(node_id: String)


GET		/nodes/:node_id/oauth/authorize	controllers.OAuthController.authorizeCall(node_id: String)
GET		/nodes/:node_id/oauth/callback	controllers.OAuthController.tokenCallback(node_id: String)
GET		/nodes/:node_id/oauth/refresh	controllers.OAuthController.refreshToken(node_id: String)


POST	/users/login					controllers.UserController.login()
GET		/users/home						controllers.UserController.home()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               	controllers.Assets.at(path="/public", file)
